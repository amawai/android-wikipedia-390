<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_travel_planner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A TITLE"
                android:textSize="30sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/planner_next"
                android:text="NEXT"/>
        </RelativeLayout>
        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/fragment_travel_planner_coordinator"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <org.wikipedia.readinglist.NoSwipeViewPager
                android:id="@+id/fragment_travel_planner_view_pager"
                android:layout_width="match_parent"
                android:layout_height="507dp"
                tools:layout_editor_absoluteY="4dp" />

        </android.support.design.widget.CoordinatorLayout>
    </LinearLayout>
</FrameLayout>